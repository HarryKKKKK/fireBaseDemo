<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/title_page_background" />

    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="eventura"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="60sp"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="title_description"/>


    <!-- Search bar on the main page -->

    <!-- Image button at the top right corner -->

    <Button
        android:id="@+id/search_game_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:layout_centerVertical="true"
        android:layout_marginTop="161dp"
        android:foreground="@mipmap/searchbar" />

    <ImageButton
        android:id="@+id/join_game_btn"
        android:layout_width="47dp"
        android:layout_height="40dp"
        android:background="@null"
        android:src="@drawable/join_button"
        android:scaleType="fitCenter"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/debug_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_game_btn"
        android:layout_centerVertical="true"
        android:text="Go to debug page"
        android:layout_marginTop="161dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
